<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.9.xsd ">

    <changeSet id="20200622-08" author="kapitanov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="teachers" schemaName="public"/>
            </not>
        </preConditions>
        <comment>Create table teachers</comment>

        <sql>
            create table teachers (
            id serial,
            idd int not null,
            first_name varchar(50),
            middle_name varchar(50),
            last_name varchar(50),
            passport varchar(15),
            birth_date timestamp(0),
            create_date timestamp(0),
            delete_date timestamp(0),
            status varchar(10),
            constraint pk_teachers_id primary key(id)
            );
        </sql>
        <rollback>
            <sql>
                drop table teachers;
            </sql>
        </rollback>
    </changeSet>

</databaseChangeLog>