<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.9.xsd ">

    <changeSet id="20200622-05" author="kapitanov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="rooms" schemaName="public"/>
            </not>
        </preConditions>
        <comment>Create table rooms</comment>
        <sql>
            create table rooms (
            id serial,
            idd int not null,
            number varchar(5),
            block varchar(5),
            create_date timestamp(0) not null,
            delete_date timestamp(0),
            constraint pk_rooms_id primary key(id)
            );
        </sql>
        <rollback>
            <sql>
                drop table rooms;
            </sql>
        </rollback>
    </changeSet>
</databaseChangeLog>